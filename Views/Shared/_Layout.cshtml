<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Té AlKilo</title>

    @* FontAwesome *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
        integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
	@if (User.Identity.IsAuthenticated)
	{
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	}else{
		<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
	}
    <link rel="stylesheet" href="~/ulp_net_inmobiliaria.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="Home">Té AlKilo</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Propietarios" asp-action="Index"><i
                                        class="fa-solid fa-user-tie"></i>Propietarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Inquilinos" asp-action="Index"><i
                                        class="fa-solid fa-people-roof"></i>Inquilinos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Inmuebles" asp-action="Index"><i
                                        class="fa-solid fa-house"></i>Inmuebles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Contratos" asp-action="Index"><i
                                        class="fa-solid fa-file-signature"></i>Contratos</a>
                            </li>
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index"><i
                                            class="fa-solid fa-users"></i>Usuarios</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <a class="user-profile" asp-area="" asp-controller="Usuarios" asp-action="Perfil">
                        <img
                            src='@(User.FindFirst("Avatar")?.Value != null && User.FindFirst("Avatar")?.Value != "" ? User.FindFirst("Avatar")?.Value : "/img/user_avatar.jpg")'>
                    </a>
                    <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Logout"><i
                            class="fa-solid fa-right-from-bracket"></i>Salir</a>
                </div>
            </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Té AlKilo - .NET - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
