@model IEnumerable<ulp_net_inmobiliaria.Models.Contrato>

@{
    ViewData["Title"] = "Listado";
}

<div class="card">
	<div class="card-header">
		<a asp-action="Create" class="float-end btn btn-outline-primary btn-sm">Crear Contrato</a>
		<h5>Contratos</h5>
	</div>
	<div class="card-body">
		<table class="table">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Desde)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Hasta)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Valor)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.InquilinoId)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.InmuebleId)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
		@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Desde)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Hasta)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Valor)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.InquilinoId)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.InmuebleId)
					</td>

					<td>
						@Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
						@Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
						@Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
					</td>
				</tr>
		}
			</tbody>
		</table>
	</div>
</div>