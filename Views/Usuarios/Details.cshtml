@model ulp_net_inmobiliaria.Models.Usuario

@{
	ViewData["Title"] = "Detalles";
}

<div class="card">
	<div class="card-header">
		<a class="float-end ms-1 btn btn-sm btn btn-outline-danger" asp-controller="Usuarios" asp-action="Delete"
			asp-route-id="@Model.Id"><span><i class="fa-solid fa-trash fa-fw"></i></span></a>
		<a class="float-end ms-1 btn btn-sm btn btn-outline-primary" asp-controller="Usuarios" asp-action="Edit"
			asp-route-id="@Model.Id"><span><i class="fa-solid fa-pencil fa-fw"></i></span></a></a>
		<h5>Detalles Usuario</h5>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-sm-2">
				<label for="AvatarFile" class="form-avatar">
					<img src="@Model.Avatar" id="user-avatar">
				</label>
			</div>
			<div class="col-sm-10">
				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Nombre)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Nombre)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Apellido)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Apellido)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Email)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Email)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Rol)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.RolNombre)
					</dd>
				</dl>
			</div>
		</div>
	</div>
	<div class="card-footer">
		<a asp-action="Index" class="float-end">Volver a la lista</a>
	</div>
</div>
