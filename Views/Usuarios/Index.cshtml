@model IEnumerable<ulp_net_inmobiliaria.Models.Usuario>

@{
    ViewData["Title"] = "Listado";
}

<div class="card">
	<div class="card-header">
		<a asp-action="Create" class="float-end btn btn-outline-primary btn-sm">Crear Usuario</a>
		<h5>Usuarios</h5>
	</div>
	<div class="card-body">
		<table class="table">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Rol)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Nombre)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Apellido)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Email)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Avatar)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
		@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.RolNombre)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nombre)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Apellido)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						@if(!String.IsNullOrEmpty(item.Avatar)){
							<img width="32" src="@item.Avatar" />
						} else {
							<img width="32" src="img/user_avatar.jpg" />
						}
					</td>
					<td>
						@Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
						@Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
						@Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
					</td>
				</tr>
		}
			</tbody>
		</table>
	</div>
</div>