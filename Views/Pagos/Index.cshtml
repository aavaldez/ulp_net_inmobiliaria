@model IEnumerable<ulp_net_inmobiliaria.Models.Pago>

@{
    ViewData["Title"] = "Listado";
}

<div class="card">
	<div class="card-header">
		<a asp-action="Create" class="float-end btn btn-outline-primary btn-sm">Crear Pago</a>
		<h5>Pagos</h5>
	</div>
	<div class="card-body">
		<table class="table">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Numero)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Fecha)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Importe)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.ContratoId)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
		@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Numero)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Fecha)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Importe)
					</td>
					<td>
						@item.Contrato.ToString()
					</td>
					<td>
						@Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
						@Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
						@Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
					</td>
				</tr>
		}
			</tbody>
		</table>
	</div>
</div>